---
import BlogPost from "../components/BlogPost.astro"
import BlogPostPreview from "../components/BlogPostPreview.astro"
import BaseLayout from "../layouts/BaseLayout.astro"

const allPosts = await Astro.glob("../pages/posts/*.md")

const pageTitle = "Welcome to the Hole."
---

<BaseLayout pageTitle={pageTitle}>
	<main class="flex flex-col justify-evenly">
		<h1
			class="text-7xl lg:text-8xl xl:text-9xl drop-shadow-[0_6px_2px_rgba(217,70,239,0.8)] text-fuchsia-200 text-center font-bold transition duration-600 flex-1"
		>
			<a
				class="drop-shadow-md ease-in shadow-black text-center font-bold hover:drop-shadow-sm hover:shadow-fuchsia-900 hover:text-fuchsia-200 hover:transition duration-700"
				href="/about"
				>RABBIT<br class="sm:hidden lg:visible" />HOLE_AI</a
			>
		</h1>

		<span
			class="text-xl font-mono border-t-4 text-fuchsia-800 border-fuchsia-300 border-double mx-auto w-10/12 border-opacity-40"
		></span>

		<div
			class="flex justify-evenly text-5xl text-fuchsia-600 drop-shadow-[0_6px_4px_rgba(217,70,239,0.8)] items-center font-bold flex-1"
		>
			<a
				class="text-2xl drop-shadow-md ease-in shadow-black text-center font-bold hover:drop-shadow-sm hover:shadow-fuchsia-900 hover:text-fuchsia-50 hover:transition duration-700"
				href="/visual"
				>SEHEN</a
			>
			<span class="flex justify-start">-</span>
			<a
				class="text-2xl drop-shadow-md ease-in shadow-black text-center font-bold hover:drop-shadow-sm hover:shadow-fuchsia-900 hover:text-fuchsia-50 hover:transition duration-700"
				href="/audio"
				>HÃ–REN</a
			>
			<span class="">-</span>
			<a
				class="text-2xl drop-shadow-md ease-in shadow-black text-center font-bold hover:drop-shadow-sm hover:shadow-fuchsia-900 hover:text-fuchsia-50 hover:transition duration-700"
				href="/blog"
				>SAGEN</a
			>
		</div>

		<!-- <div
			class="md:w-1/2 mx-auto flex-1 border-t-fuchsia-800 flex flex-col p-2 mt-2"
		>
			<span
				class="text-xl font-mono border-t-4 text-fuchsia-800 border-fuchsia-300 border-double border-opacity-40"
			></span>

			<ul class="flex flex-col flex-1 justify-evenly">
				{
					allPosts.slice(-1).map((post) => (
						<BlogPostPreview
							url={post.url}
							title={post.frontmatter.title}
							description={post.frontmatter.description}
						/>
					))
				}
			</ul>
		</div> -->

		<div
			class="md:w-1/2 mx-auto flex-1 border-t-fuchsia-800 flex flex-col p-2 mt-2"
		>
			<span
				class="text-xl font-mono border-t-4 text-fuchsia-800 border-fuchsia-300 border-double mt-2 pt-4 border-opacity-40"
			></span>
			<ul class="flex flex-col flex-1 justify-evenly">
				{
					allPosts.slice(-2).map((post) => (
						<BlogPostPreview
							url={post.url}
							title={post.frontmatter.title}
							description={post.frontmatter.description}
						/>
					))
				}
			</ul>
		</div>
	</main>
</BaseLayout>
