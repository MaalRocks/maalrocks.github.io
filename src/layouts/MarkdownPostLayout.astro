---
import BaseLayout from "./BaseLayout.astro"
const { frontmatter } = Astro.props
---

<BaseLayout pageTitle={frontmatter.title}>
	<article class="prose prose-lg mx-auto px-2">
		<div class="mb-2 relative h-2">
			<img
				height="200px"
				src={frontmatter.image.url}
				alt={frontmatter.image.alt}
			/>

			<div class="absolute bottom-0 bg-black w-full pl-1">
				<h1 class="m-0">
					{frontmatter.title}
				</h1>
				<em>{frontmatter.description}</em>
			</div>
		</div>
		<slot />

		<p>
			{frontmatter.pubDate.slice(0, 10)} - <a href="/about"
				>{frontmatter.author}</a
			>
		</p>

		<span
			class="text-xl w-60 mx-auto font-mono border-t-4 text-fuchsia-800 border-fuchsia-300 border-double border-opacity-40"
		></span>

		<div class="flex justify-around">
			{
				frontmatter.tags.map((tag: any) => (
					<p class="tag">
						<a href={`/tags/${tag}`}>{tag}</a>
					</p>
				))
			}
		</div>
	</article>
</BaseLayout>
