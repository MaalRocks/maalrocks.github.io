---
import "../styles/global.css"

import Footer from "../components/Footer.astro"
import Header from "../components/Header.astro"

export interface Props {
	pageTitle: string
	pageBackground: string
}

const { pageTitle, pageBackground } = Astro.props
---

<!DOCTYPE html>
<html
	lang="de"
	class={`bg-cover bg-no-repeat bg-center bg-fixed ${pageBackground}`}
>
	<head>
		<meta charset="UTF-8" />
		<meta
			name="viewport"
			content="width=device-width"
		/>
		<link
			rel="icon"
			type="image/svg+xml"
			href="/favicon.svg"
		/>
		<meta
			name="generator"
			content={Astro.generator}
		/>
		<title>{pageTitle}</title>
	</head>
	<body class="relative h-screen backdrop-blur-sm backdrop-brightness-50">
		<Header />
		<slot />

		<script>
			import "../scripts/menu.js"
		</script>
	</body>
</html>
